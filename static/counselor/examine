  <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
  <!-- Excel导出依赖库 -->
  <script src="https://cdn.jsdelivr.net/npm/xlsx@0.18.5/dist/xlsx.full.min.js"></script>
  <style>
    :root {
      --primary: #3b82f6;
