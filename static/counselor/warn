    </div>
  </header>

  <main class="pt-20 p-6 max-w-6xl mx-auto">
    <!-- 标题 -->
    <div class="mb-8">
      <h2 class="text-3xl font-bold text-blue-900 mb-2">学业预警管理</h2>
      <div class="flex items-center gap-2 text-gray-500 text-sm">
        <a href="#" class="hover:text-blue-500">辅导员主页</a>
        <i class="fa fa-angle-right"></i>
        <span>差生学业预警</span>
      </div>
    </div>

    <!-- 筛选卡片：修改下拉框默认值为“全部” -->
    <div class="card p-6 mb-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label class="block text-gray-600 font-medium mb-2 text-sm">选择班级</label>
          <select id="selectedClass" class="input-base">
            <option value="all">全部班级</option> <!-- 默认选中“全部班级” -->
            <option value="cs202301">计算机2301班</option>
            <option value="cs202302">计算机2302班</option>
            <option value="cs202303">计算机2303班</option>
            <option value="cs202304">计算机2304班</option>
          </select>
        </div>
        <div>
          <label class="block text-gray-600 font-medium mb-2 text-sm">预警类型</label>
          <select id="warningType" class="input-base">
            <option value="all">全部类型</option> 
            <option value="fail">成绩不及格</option>
            <option value="absent">缺课严重</option>
            <option value="makeup">补考未通过</option>
          </select>
        </div>
        <div class="flex items-end">
          <button id="queryBtn" class="btn btn-primary w-full justify-center">
            <i class="fa fa-search"></i>查询学生
          </button>
        </div>
      </div>
    </div>

    <!-- 学生列表卡片-->
    <div id="studentListCard" class="card overflow-hidden">
      <!-- 卡片头部 -->
      <div class="p-6 border-b border-gray-100 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <h3 class="font-bold text-lg">学业预警学生列表 <span class="text-gray-400 font-normal text-sm">(共<span id="totalCount">0</span>名学生)</span></h3>
        <div class="flex gap-3">
          <button class="btn btn-outline" onclick="alert('列表导出成功！')">
            <i class="fa fa-download"></i><span class="hidden sm:inline">导出列表</span>
          </button>
          <button class="btn btn-warning" onclick="sendAllWarning()">
            <i class="fa fa-send"></i><span class="hidden sm:inline">发送预警</span>
          </button>
        </div>
      </div>

      <!-- 表格 -->
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500">序号</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500">学号</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500">姓名</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500">班级</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500">预警原因</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500">预警状态</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-gray-500">操作</th>
            </tr>
          </thead>
          <tbody id="studentTableBody" class="divide-y divide-gray-100"></tbody>
        </table>
      </div>

      <!-- 分页 -->
      <div class="p-4 flex items-center justify-between text-sm text-gray-500">
        <span id="pageInfo">显示 1 至 5 条，共 0 条</span>
        <div class="flex gap-1">
          <button id="prevPageBtn" class="px-3 py-1 rounded border border-gray-200 hover:bg-gray-50" disabled>
            <i class="fa fa-angle-left"></i>
          </button>
          <div id="pageButtons" class="flex gap-1"></div>
          <button id="nextPageBtn" class="px-3 py-1 rounded border border-gray-200 hover:bg-gray-50" disabled>
            <i class="fa fa-angle-right"></i>
          </button>
        </div>
      </div>
    </div>
  </main>

  <!-- 详情模态框 -->
  <div id="detailModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg max-w-md w-full p-6">
      <h3 class="text-lg font-bold mb-4 text-blue-900">学生预警详情</h3>
      <div class="space-y-4 mb-6">
        <div><p class="text-sm text-gray-500">学号</p><p class="font-medium" id="modalNo"></p></div>
        <div><p class="text-sm text-gray-500">姓名</p><p class="font-medium" id="modalName"></p></div>
        <div><p class="text-sm text-gray-500">班级</p><p class="font-medium" id="modalClass"></p></div>
        <div><p class="text-sm text-gray-500">预警原因</p><p class="font-medium" id="modalReason"></p></div>
        <div><p class="text-sm text-gray-500">预警状态</p><p class="font-medium" id="modalStatus"></p></div>
        <div>
          <p class="text-sm text-gray-500">辅导员备注</p>
          <textarea id="modalRemark" class="input-base mt-1" rows="3" placeholder="输入辅导备注（可选）"></textarea>
        </div>
      </div>
      <div class="flex justify-end gap-3">
        <button class="btn btn-outline" onclick="document.getElementById('detailModal').classList.add('hidden')">取消</button>
        <button class="btn btn-primary" onclick="saveRemark()">保存备注</button>
      </div>
    </div>
  </div>

  <script>
    // 全局核心变量
    let allStudents = []; 
    let currentPage = 1;  
    const pageSize = 5;   
    let totalPages = 0;   
    let currentWarningId = null; 
    // 班级映射
    const classNameMap = {
      'cs202301': '计算机2301班',
      'cs202302': '计算机2302班',
      'cs202303': '计算机2303班',
      'cs202304': '计算机2304班'
    };

    // 页面加载时直接加载全部数据，无需手动点击查询
    window.onload = () => {
      document.getElementById('queryBtn').onclick = loadStudentData;
      document.getElementById('pageButtons').onclick = handlePageClick;
      document.getElementById('prevPageBtn').onclick = () => changePage(currentPage - 1);
      document.getElementById('nextPageBtn').onclick = () => changePage(currentPage + 1);
      loadStudentData(); // 页面打开就加载全部数据
    };

    // 1. 加载数据（支持“全部”筛选，默认加载所有）
    function loadStudentData() {
      const selectedClass = document.getElementById('selectedClass').value;
      const warningType = document.getElementById('warningType').value;

      // 完整预警数据（包含不同班级、不同类型）
      const fullStudentData = [
        { warning_id: 1, student_id: '2023001', student_name: '张三', class_id: 'cs202301', warning_reason: 'fail', fail_courses: '高等数学、Python', absent_count: 8, makeup_courses: '数据结构', warning_status: '未发送', status_icon: 'fa-clock-o', status_class: 'bg-gray-100 text-gray-700', counselor_remark: '' },
        { warning_id: 2, student_id: '2023002', student_name: '李四', class_id: 'cs202301', warning_reason: 'absent', fail_courses: '大学英语', absent_count: 12, makeup_courses: '大学物理', warning_status: '已发送', status_icon: 'fa-paper-plane', status_class: 'bg-blue-100 text-blue-700', counselor_remark: '需重点关注' },
        { warning_id: 3, student_id: '2023041', student_name: '王五', class_id: 'cs202302', warning_reason: 'makeup', fail_courses: '数据结构、大学物理', absent_count: 5, makeup_courses: '高等数学', warning_status: '已确认', status_icon: 'fa-check', status_class: 'bg-green-100 text-green-700', counselor_remark: '家长已回复' },
        { warning_id: 4, student_id: '2023042', student_name: '赵六', class_id: 'cs202302', warning_reason: 'fail', fail_courses: 'Python', absent_count: 7, makeup_courses: '大学英语', warning_status: '未发送', status_icon: 'fa-clock-o', status_class: 'bg-gray-100 text-gray-700', counselor_remark: '' },
        { warning_id: 5, student_id: '2023061', student_name: '孙七', class_id: 'cs202303', warning_reason: 'absent', fail_courses: '高等数学、大学英语', absent_count: 9, makeup_courses: '数据结构', warning_status: '已发送', status_icon: 'fa-paper-plane', status_class: 'bg-blue-100 text-blue-700', counselor_remark: '' },
        { warning_id: 6, student_id: '2023062', student_name: '周八', class_id: 'cs202303', warning_reason: 'makeup', fail_courses: '大学物理', absent_count: 6, makeup_courses: 'Python', warning_status: '未发送', status_icon: 'fa-clock-o', status_class: 'bg-gray-100 text-gray-700', counselor_remark: '多次联系不上' },
        { warning_id: 7, student_id: '2023081', student_name: '吴九', class_id: 'cs202304', warning_reason: 'fail', fail_courses: '数据结构、Python', absent_count: 10, makeup_courses: '高等数学', warning_status: '已确认', status_icon: 'fa-check', status_class: 'bg-green-100 text-green-700', counselor_remark: '' },
        { warning_id: 8, student_id: '2023082', student_name: '郑十', class_id: 'cs202304', warning_reason: 'absent', fail_courses: '高等数学、大学物理', absent_count: 4, makeup_courses: '大学英语', warning_status: '未发送', status_icon: 'fa-clock-o', status_class: 'bg-gray-100 text-gray-700', counselor_remark: '' }
      ];

      // 筛选逻辑：选“全部”则不筛选，否则按条件过滤
      allStudents = fullStudentData.filter(student => {
        const classMatch = selectedClass === 'all' ? true : student.class_id === selectedClass;
        const typeMatch = warningType === 'all' ? true : student.warning_reason === warningType;
        return classMatch && typeMatch;
      });

      // 分页计算与页面更新
      const totalCount = allStudents.length;
      totalPages = Math.ceil(totalCount / pageSize);
      currentPage = 1;

            document.getElementById('totalCount').textContent = totalCount;
      document.getElementById('pageInfo').textContent = `显示 1 至 ${Math.min(pageSize, totalCount)} 条，共 ${totalCount} 条`;
      renderTable();
      renderPageBtn();
      updatePageBtnStatus();
    }

    // 2. 渲染学生表格
    function renderTable() {
      const tableBody = document.getElementById('studentTableBody');
      tableBody.innerHTML = '';
      const start = (currentPage - 1) * pageSize;
      const end = Math.min(start + pageSize, allStudents.length);
      const currentData = allStudents.slice(start, end);

      currentData.forEach((student, idx) => {
        const tr = document.createElement('tr');
        tr.className = 'table-row';
        const serialNum = start + idx + 1;

        // 生成预警原因文本
        let reasonText = '';
        if (student.warning_reason === 'fail') reasonText = `<span class="text-red-600">${student.fail_courses}不及格</span>`;
        if (student.warning_reason === 'absent') reasonText = `<span class="text-orange-600">缺课${student.absent_count}次</span>`;
        if (student.warning_reason === 'makeup') reasonText = `<span class="text-red-600">${student.makeup_courses}补考未过</span>`;

        tr.innerHTML = `
          <td class="px-4 py-3 text-sm">${serialNum}</td>
          <td class="px-4 py-3 text-sm">${student.student_id}</td>
          <td class="px-4 py-3 text-sm font-medium">${student.student_name}</td>
          <td class="px-4 py-3 text-sm">${classNameMap[student.class_id]}</td>
          <td class="px-4 py-3 text-sm">${reasonText}</td>
          <td class="px-4 py-3">
            <span class="badge ${student.status_class}">
              <i class="fa ${student.status_icon}"></i>${student.warning_status}
            </span>
          </td>
          <td class="px-4 py-3">
            <button class="btn btn-outline btn-sm" onclick="showDetail(${student.warning_id})">
              <i class="fa fa-eye"></i>查看
            </button>
          </td>
        `;
        tableBody.appendChild(tr);
      });
    }

    // 3. 渲染分页按钮
    function renderPageBtn() {
      const pageContainer = document.getElementById('pageButtons');
      pageContainer.innerHTML = '';
      for (let i = 1; i <= totalPages; i++) {
        const btn = document.createElement('button');
        btn.className = `px-3 py-1 rounded border border-gray-200 hover:bg-gray-50 ${i === currentPage ? 'page-active' : ''}`;
        btn.textContent = i;
        btn.dataset.page = i;
        pageContainer.appendChild(btn);
      }
    }

    // 4. 处理分页按钮点击
    function handlePageClick(e) {
      const page = e.target.dataset.page;
      if (page) changePage(parseInt(page));
    }

    // 5. 切换页码
    function changePage(page) {
      if (page < 1 || page > totalPages) return;
      currentPage = page;
      renderTable();
      renderPageBtn();
      updatePageBtnStatus();
      // 更新分页信息文本
      const startNum = (page - 1) * pageSize + 1;
      const endNum = Math.min(page * pageSize, allStudents.length);
      document.getElementById('pageInfo').textContent = `显示 ${startNum} 至 ${endNum} 条，共 ${allStudents.length} 条`;
    }

    // 6. 更新分页按钮禁用状态
    function updatePageBtnStatus() {
      const prevBtn = document.getElementById('prevPageBtn');
      const nextBtn = document.getElementById('nextPageBtn');
      prevBtn.disabled = currentPage === 1;
      nextBtn.disabled = currentPage === totalPages;
    }

    // 7. 显示详情模态框
    function showDetail(warningId) {
      const student = allStudents.find(item => item.warning_id === warningId);
      if (!student) return;
      currentWarningId = warningId;

      // 生成详情页预警原因文本
      let reasonText = '';
      if (student.warning_reason === 'fail') reasonText = `成绩不及格：${student.fail_courses}`;
      if (student.warning_reason === 'absent') reasonText = `缺课严重：共${student.absent_count}次`;
      if (student.warning_reason === 'makeup') reasonText = `补考未通过：${student.makeup_courses}`;

      // 填充模态框数据
      document.getElementById('modalNo').textContent = student.student_id;
      document.getElementById('modalName').textContent = student.student_name;
      document.getElementById('modalClass').textContent = classNameMap[student.class_id];
      document.getElementById('modalReason').textContent = reasonText;
      document.getElementById('modalStatus').textContent = student.warning_status;
      document.getElementById('modalRemark').value = student.counselor_remark || '';

      document.getElementById('detailModal').classList.remove('hidden');
    }

    // 8. 保存辅导员备注
    function saveRemark() {
      if (!currentWarningId) return;
      const remark = document.getElementById('modalRemark').value.trim();
      const idx = allStudents.findIndex(item => item.warning_id === currentWarningId);
      if (idx !== -1) {
        allStudents[idx].counselor_remark = remark;
        alert('备注保存成功！');
        document.getElementById('detailModal').classList.add('hidden');
      }
    }

    // 9. 批量发送预警
    function sendAllWarning() {
      const unSent = allStudents.filter(s => s.warning_status === '未发送');
      if (unSent.length === 0) {
        alert('所有预警均已发送！');
        return;
      }
      if (confirm(`确定发送${unSent.length}条预警？`)) {
        // 更新未发送预警的状态
        allStudents = allStudents.map(s => 
          s.warning_status === '未发送' 
            ? { 
                ...s, 
                warning_status: '已发送', 
                status_icon: 'fa-paper-plane', 
                status_class: 'bg-blue-100 text-blue-700' 
              }
            : s
        );
        renderTable(); // 重新渲染表格显示最新状态
        alert(`成功发送${unSent.length}条预警！`);
      }
    }
  </script>
</body>
</html>
