<body class="text-gray-800">
  <!-- 导航栏 -->
  <header class="glass fixed top-0 left-0 right-0 z-30">
    <div class="flex items-center justify-between px-6 h-16">
      <div class="flex items-center gap-3">
        <i class="fa fa-exclamation-triangle text-blue-500 text-xl"></i>
        <h1 class="font-bold text-lg hidden sm:block text-blue-900">学生管理系统</h1>
      </div>
      <button class="btn btn-outline">
        <i class="fa fa-home"></i><span class="hidden sm:inline">返回</span>
